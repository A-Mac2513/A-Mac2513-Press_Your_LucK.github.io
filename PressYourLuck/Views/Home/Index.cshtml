@model PlayerBets
@{
    ViewData["Title"] = "Home Page";
    var name = Context.Request.Cookies["playerName"];
    var coins = Context.Request.Cookies["coins"];
    ViewBag.Bet = null;
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="jumbotron">
    <h2 id="shadow">Welcome, @name!  </h2>
</div>

<form asp-controller="Game" asp-action="Index" method="post" enctype="application/x-www-form-urlencoded">
    <div asp-validation-summary="ModelOnly" class="text-danger text-xl-center bg-white"></div>

    <div class="form-group">
        <label class="text-xl">How many coins do you wish to wager?</label>
        <input type="text" asp-for="CurrentBet" class="form-control" />
        <span id="errorMsg" asp-validation-for="CurrentBet" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-primary" value="Start Playing!" />
</form>
